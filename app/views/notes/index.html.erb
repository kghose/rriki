<h1>Listing notes</h1>

<table>
  <tr>
  </tr>

<% for note in @notes do %>
  <tr>
  	<td><%= note.title %>
    <td><%= link_to_remote 'Show', 
                  :url => {:action => 'show', :id => note, :divid => 'note-div'},
                  :method => :put, 
                  :update => 'note-div' %></td>
    <td><%#= link_to 'Edit', edit_note_path(note) %></td>
    <td><%#= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to_remote 'New note', 
          :url => {:action => 'new', :id => note, :divid => 'note-div'},
          :method => :put, 
          :update => 'note-div' %>
<div id='note-div'>
</div>
